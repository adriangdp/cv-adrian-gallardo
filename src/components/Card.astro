---
import TechnologyIcon from "./TechnologyIcon.astro";
const { title, href, gitrep, body, techArray } = Astro.props;
---

<div
  class="w-96 min-h-fit mx-4 my-4 p-10 flex flex-col items-center justify-start bg-zinc-900 rounded-2xl"
>
  <p class="text-2xl text-amber-400">{title} </p>
  <div class="my-4 flex flex-row justify-around">
    <a href={href}  target="_blank" class="text-sm underline underline-offset-4 mx-3 text-amber-400 hover:text-amber-50 visited:text-slate-500 disabled:opacity-75 ">Web</a>
    { gitrep ?
    
    <a href={gitrep} target="_blank" class="text-sm underline underline-offset-4 mx-3 text-amber-400 hover:text-amber-50 visited:text-slate-500 disabled:opacity-75">Github</a>
    :
    <br />
    }
    
  </div>
  <p class="text-sm mb-8 h-1/3">{body}</p>

    <div class="w-4/5 mx-auto flex flex-row space-around flex-wrap justify-start align-middle">
      {
        techArray.map((e) => {
          return <TechnologyIcon class="w-1/3" tech={e} />;
        })
      }
    </div>

  
</div>
